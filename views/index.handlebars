<h1 class="col-md-12"> </h1>
<div class="container">
    <!-- Jumbo Section -->
    <div class="row">
       <div class="col-md-12 jumbotron">
          <h1 class="display-4">WELCOME TO RYRY'S BURGER BAR</h1>
            <p class="lead">Hope you're Hungry!</p>
    
      </div>
  </div>

<div class="row mt-4">
  <div class="col-lg-6">
    <h2>Selection of Available Burgers</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
   <div class="col-lg-6">
    <h2>Burgers that are devoured!</h2>
    <ul>
       {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
    </ul>
  </div>
</div>

<div class="row mt-4">
  <div class="col-lg-5">
    <h2>Create your own Burger Here!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name" placeholder="ex. Chicken Burger">
        <small id="emailHelp" class="form-text text-muted">Type Burger Name Here</small>
  </div>
  
  <div class="form-group">
    {{!-- <label for="devoured">devoured?</label><br> --}}
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Devoured
  </div>
    <button class="btn btn-success" type="submit">Add Burger</button>
  </form>
  </div>
